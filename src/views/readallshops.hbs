            <td><a href="/shop-details/{{id}}">{{name}}</a></td>
            <td>{{rating}}</td>
        </tr>
           {{/each}}
    </table>
    <br>
        <nav>
        <a href ="/">Back to homepage</a>
    </nav>

</body>
</html>